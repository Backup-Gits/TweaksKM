<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cpuActivity"
    android:scrollbars="none"
    android:orientation="vertical"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/gpu_head"
        android:textSize="20sp"
        android:padding="8dp"
        android:textColor="@color/green_light"
        android:text="@string/title_cpu"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/gpu_scroll_view"
        android:layout_below="@+id/gpu_head"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/bigCpu"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"/>

                    <View
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/green_light"/>

                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/littleCpu"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"/>

                </LinearLayout>

                <View
                    android:layout_gravity="bottom"
                    android:background="@drawable/view_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>

            </FrameLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/big_cpu_usage"
                        android:text="Calculating..."
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Big cluster usage"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/little_cpu_usage"
                        android:text="Calculating..."
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Little cluster usage"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="32dp"
                android:layout_marginStart="12dp"
                android:text="@string/txt_big_clus"
                android:textColor="@color/green_light"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/ripple"
                android:layout_marginTop="8dp"
                android:id="@+id/ll_gpu_gov"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:text="@string/txt_cpu_gov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_cpu_big_gov"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/big_gov_sw"
                        android:theme="@style/sw"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/ripple"
                android:layout_marginTop="8dp"
                android:id="@+id/ll_gpu_min"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:text="@string/txt_cpu_min_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_cpu_big_min_freq"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/big_min_freq_sw"
                        android:theme="@style/sw"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/ripple"
                android:layout_marginTop="8dp"
                android:id="@+id/ll_gpu_max"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:text="@string/txt_cpu_max_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_cpu_big_max_freq"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/big_max_freq_sw"
                        android:theme="@style/sw"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"
                android:text="@string/txt_lit_clus"
                android:textColor="@color/green_light"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/ripple"
                android:layout_marginTop="8dp"
                android:id="@+id/ll_gpu_gov"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:text="@string/txt_cpu_gov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_cpu_lit_gov"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/lit_gov_sw"
                        android:theme="@style/sw"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/ripple"
                android:layout_marginTop="8dp"
                android:id="@+id/ll_gpu_min"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:text="@string/txt_cpu_min_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_cpu_lit_min_freq"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/lit_min_freq_sw"
                        android:theme="@style/sw"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/ripple"
                android:layout_marginTop="8dp"
                android:id="@+id/ll_gpu_max"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true">

                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:text="@string/txt_cpu_max_freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_cpu_lit_max_freq"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/lit_max_freq_sw"
                        android:theme="@style/sw"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>